@page
@using APIDataAccess.Utils
@model TimeshareUISolution.Pages.Admin.Owner.IndexModel
@{
    Layout = "_Layout_Admin";
}


<h3 class="card-header">Owners</h3>

<div class="search-bar">
    <div class="card location">
        <span>Search in</span>
        <select>
            <option>Cleveland</option>
        </select>
    </div>
    <div class="card search-input">
        <input type="text" placeholder="Enter an address, city or ZIP code">
    </div>
    <div class="filters">
        <select>
            <option>For sale</option>
        </select>
        <select>
            <option>Type Apartment</option>
        </select>
        <div class="rooms">
            <span>Room</span>
            <a asp-route-number="@IndexModel.CurrentPage" class="active">@IndexModel.CurrentPage</a>
            <a asp-route-number="@(IndexModel.CurrentPage + 1)">@(IndexModel.CurrentPage + 1)+</a>
        </div>
        <div class="price-range">
            <select>
                <option>Min Price: $500k</option>
            </select>
            <select>
                <option>Max Price: $700k</option>
            </select>
        </div>
    </div>
</div>

<div class="results">
    <div class="best-options">
        @{
            if (Model.OwnerList != null && Model.OwnerList.Any())
            {
                foreach (var owner in Model.OwnerList)
                {
                    <a href="/Admin/Owner/Edit?ownerId=@owner.OwnerId">
                        <div class="property-card">
                            <div class="property-details">
                                <h4>@owner.OwnerName</h4>
                                <p>@owner.ContactPerson</p>
                                <div class="info">
                                    <p>
                                        <span class="icon">Status: @Enum.GetValues(typeof(OwnerStatus)).GetValue(Convert.ToInt64(owner.Status))  </span> &nbsp;&nbsp;
                                        <span class="icon">Email: @owner.Email</span> &nbsp;&nbsp;
                                        <span class="icon">Phone: @owner.Phone</span> &nbsp;&nbsp;
                                </div>
                            </div>
                        </div>
                    </a>
                }
            }
        }
    </div>
    <div class="map">
        <div id="map" style="width:100%;height:500px;"></div>
    </div>
</div>

<div class="centered-div">
    <div class="pagination">
        <a asp-route-number="@(IndexModel.CurrentPage - 1)">&laquo;</a>
        <a asp-route-number="@IndexModel.CurrentPage" class="active">@IndexModel.CurrentPage</a>
        <a asp-route-number="@(IndexModel.CurrentPage + 1)">&raquo;</a>
    </div>
</div>


<script>
    let map;

    async function initMap() {
        const { Map } = await google.maps.importLibrary("maps");

        map = new Map(document.getElementById("map"), {
            center: { lat: -34.397, lng: 150.644 },
            zoom: 8,
        });
    }

    initMap();
</script>
