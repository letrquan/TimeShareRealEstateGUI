@page
@model TimeshareUISolution.Pages.Admin.LoginModel
@{
    Layout = "_Layout_NoHeader";
}

<div class="container-fluid vh-100 d-flex justify-content-center align-items-center">
    <div class="outer-card bg-light d-flex">
        <!-- Sign Up Card -->
        <div class="signin-part">
            <div class="header">
                <a href="/User/Index">
                    <div class="logo-container">
                        <img src="~/img/home.png" alt="House Icon" class="house-icon">
                        <span class="website-name">Timeshare</span>
                    </div>
                </a>
                <h2><b>Welcome back!</b></h2>
                <p>Experience the Difference of Premium Real Estate.</p>
            </div>
            <form method="post" asp-page-handler="NormalLogin">
                <div class="form-floating mb-3">
                    <input type="email" asp-for="@Model.Email" class="form-control" id="email" placeholder="name@example.com">
                    <label for="email">Email</label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" asp-for="@Model.Password" class="form-control" id="password" placeholder="Password">
                    <label for="password">Password</label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="forgot-password">
                    <a href="#"><b>Forgot Password?</b></a>
                </div>
                <button type="submit" class="btn btn-primary btn-signup w-100">Sign In</button>
            </form>
            <div class="sign-up-option">or continue with</div>
            <div class="row">
                <div class="col-md-4 button-container">
                    <button class="logo-button">
                        <img src="~/img/social.png" alt="Google logo">
                    </button>
                </div>
                <div class="col-md-4 button-container">
                    <button class="logo-button">
                        <img src="~/img/facebook-stupid.png" alt="Facebook logo">
                    </button>
                </div>
                <div class="col-md-4 button-container">
                    <button class="logo-button">
                        <img src="~/img/apple.png" alt="Apple logo">
                    </button>
                </div>
            </div>
            <div class="signup-transition" style="text-align:center; margin-top:20px; font-size:1em;">
                <label>Not a member? </label>
                <a href="/Admin/SignUp">Register now</a>
            </div>
        </div>
        <div class="signin-img">
            <img src="~/img/flame-sign-in.gif" alt="sign-in" />
        </div>

    </div>
</div>
<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap');

    .logo-container {
        display: flex;
        align-items: center;
        justify-content:center;
        width: 100%;
        margin-bottom:10px;
    }

    .house-icon {
        width: 30px;
        height: 30px;
    }

    .website-name {
        margin-left: 5px;
        font-size: 20px;
        font-weight:bold;
        color: forestgreen;
    }


    .forgot-password {
        margin-bottom:7px;
        text-align: right;
        font-size: .8em; /* Adjust as needed */
        color: #666; /* Adjust as needed */
    }


    .header {
        text-align: center;
        padding: 20px;
    }

        .header h2 {
            font-size: 2em; /* Adjust as needed */
            margin-bottom: 0.5em; /* Adjust as needed */
        }

        .header p {
            font-size: 1em; /* Adjust as needed */
            color: #666; /* Adjust as needed */
        }


    a {
        text-decoration: none;
    }

    .card {
        padding: 5px;
        border-radius: 20px; /* Ensures consistent border-radius */
        min-height: 500px;
    }

    @@media screen and (max-width: 768px) {
        .signin-img img {
            width: 100%;
            height: auto;
        }
    }

    .signin-img {
        margin-left: 50px; /* Adjust this value as needed */
    }

    @@media screen and (max-width: 768px) {
    .outer-card {
        flex-direction: column;
    }

    .signin-part {
        margin-left: 0;
        min-width:500px;
    }
}

    .outer-card {
        font-family: 'Poppins', sans-serif;
        width: 70%;
        padding: 40px; /* Space around the inner card */
        border-radius: 25px; /* Larger radius for the outer card */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
        display: flex; /* Align inner card to the left */
        align-items: center; /* Center inner card vertically */
        justify-content: flex-start; /* Start alignment */
        min-height: 60vh; /* Minimum height for outer card */
    }

    .form-check .form-check-input {
        width: 15px;
        height: 15px;
        margin-top: 0.3rem;
        margin-left: 0;
    }

    .form-check-label {
        font-size: 0.9rem;
        margin-left: 0.5rem;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        border-radius: 12px; /* Adjusts the roundness */
        /* Optional additional styles for a consistent look */
        border: 1px solid #ced4da;
        padding: .375rem .75rem;
    }

    .btn-signup {
        padding: 0.9rem 1.5rem; /* Larger top/bottom and left/right padding */
        font-size: 1rem; /* Keeping the text size the same */
        border-radius: 15px;
    }

    .sign-up-option {
        display: flex;
        align-items: center;
        text-align: center;
        color: rgba(108, 117, 125, 0.5); /* Lighter text color with reduced opacity */
        margin-top: 20px; /* Space above the text */
        font-size: 0.9rem; /* Adjust the size as needed */
        margin-bottom: 20px;
    }

        .sign-up-option::before,
        .sign-up-option::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid rgba(108, 117, 125, 0.5); /* Lighter line color with reduced opacity */
            margin: 0px 10px; /* Space between the text and lines */
        }

    .btn-option {
        border: 1px solid black;
        border-radius: 15px;
    }

    .img-with-padding {
        width: 30px;
        height: 30px;
        padding: 3px;
    }

    .logo-button {
        border: none;
        border-radius: 50%; /* Makes the button circular */
        width: 50px; /* Adjust as needed */
        height: 50px; /* Adjust as needed */
    }

        .logo-button img {
            width: 100%;
            height: auto;
        }

    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
    }

</style>
